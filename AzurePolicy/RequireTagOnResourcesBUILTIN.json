{
  "mode": "Indexed",
        "policyRule": {
    "if": {
      "field": "[concat('tags[', parameters('tagName'), ']')]",
      "in":[parameters()]
      "exists": "false"
    },
    "then": {
      "effect": "deny"
    }
  },
  "parameters": {
    "requiredTags":{
      "type": "Array",
        "metadata": {
        "displayName": "Required Tags",
        "description": "The tags required for before resource creation are CostCenter, Department, Owner",
                  }

    }
}
}
